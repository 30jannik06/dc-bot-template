{
  "name": "bot-template",
  "version": "1.0.0",
  "description": "A Basic Discord Bot Template with Slash Commands",
  "keywords": [
    "discord.js",
    "template",
    "discord",
    "bot"
  ],
  "homepage": "https://github.com/30jannik06/bot-template#readme",
  "bugs": {
    "url": "https://github.com/30jannik06/bot-template/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/30jannik06/bot-template.git"
  },
  "license": "ISC",
  "author": ".jannik",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "dev": "cross-env NODE_ENV=development tsx watch src/index.ts",
    "start": "cross-env NODE_ENV=production node dist/index.js",
    "build": "tsup src/index.ts --format esm,cjs --minify --clean",
    "format": "prettier --write \"**/*.{ts,json,js,md}\"",
    "format:check": "prettier --check \"**/*.{ts,jsom,js,md}\"",
    "lint": "eslint . --ext ts --fix",
    "lint:fix": "eslint . --ext .ts --fix",
    "generate:docs": "tsx scripts/generate-commands-doc.ts"
  },
  "dependencies": {
    "boxen": "^8.0.1",
    "chalk": "^5.4.1",
    "discord.js": "^14.19.2",
    "dotenv": "^16.5.0",
    "dotenv-flow": "^4.1.0",
    "figlet": "^1.8.1",
    "zod": "^3.24.3"
  },
  "devDependencies": {
    "@eslint/js": "^9.25.1",
    "@types/figlet": "^1.7.0",
    "@types/node": "^22.15.3",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "cross-env": "^7.0.3",
    "eslint": "^9.27.0",
    "eslint-config-prettier": "^10.1.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-n": "^17.17.0",
    "eslint-plugin-prettier": "^5.2.6",
    "eslint-plugin-promise": "^7.2.1",
    "prettier": "^3.5.3",
    "tsup": "^8.4.0",
    "tsx": "^4.19.4",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.31.1"
  },
  "private": "true"
}